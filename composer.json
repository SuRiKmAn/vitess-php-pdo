{
  "name": "pixelfederation/vitess-php-pdo",
  "description": "PHP PDO compliant driver for Vitess PHP client.",
  "homepage": "https://git.pixelfederation.com/shared/Vitess.Driver.PHP",
  "license": "BSD-3-Clause",
  "keywords": [
    "PDO",
    "Vitess",
    "driver"
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.6",
    "vitess/php-client": "dev-master",
    "greenlion/php-sql-parser": "dev-master#29bdef6fed5ba7fdfe3c9f942adfe73d6bdffa88",
    "doctrine/collections": "^1.3"
  },

  "require-dev": {
    "symfony/var-dumper": "^3.0@dev",
    "phpunit/phpunit": "^5.1",
    "squizlabs/php_codesniffer": "2.*",
    "phpmd/phpmd": "@stable",
    "phpunit/php-code-coverage": "^4"
  },

  "config": {
    "bin-dir": "bin"
  },

  "autoload": {
    "psr-4": {
      "VitessPdo\\": "src/VitessPdo/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "VitessPdoTest\\": "tests/VitessPdoTest/"
    }
  }
}
